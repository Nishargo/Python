def shut_down(s):
    s = s.lower() or s.upper()     
    if s == "yes":             
       return "Shutting down..."
        
    elif s == "no":     
       return "Shutdown aborted!"
    
    else:      
       return "Sorry, I didn't understand you."

print shut_down("dgdsghdg")

